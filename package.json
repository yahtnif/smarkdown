{
  "name": "smarkdown",
  "description": "Markdown parser, simple and powerful.",
  "author": "Yahtnif <yahtnif@gmail.com>",
  "version": "0.4.1",
  "main": "dist/smarkdown.js",
  "module": "dist/smarkdown.es.js",
  "jsnext:main": "dist/smarkdown.es.js",
  "browser": "dist/smarkdown.min.js",
  "repository": "yahtnif/smarkdown",
  "homepage": "https://github.com/yahtnif/smarkdown",
  "license": "MIT",
  "keywords": [
    "commonmark",
    "smarkdown",
    "markdown",
    "markup",
    "parser",
    "html",
    "gfm"
  ],
  "scripts": {
    "build": "rollup --c",
    "test": "mocha --inline-diffs",
    "pass": "yarn build && yarn test",
    "precommit": "lint-staged",
    "version": "yarn build"
  },
  "lint-staged": {
    "{src|test}/*.{js,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "fs-extra": "^7.0.0",
    "husky": "^0.14.3",
    "klaw-sync": "^4.0.0",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "prettier": "1.14.2",
    "rollup": "^0.65.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-typescript2": "0.17.0",
    "rollup-plugin-uglify": "^4.0.0",
    "typescript": "3.0.3"
  }
}
