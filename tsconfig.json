{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "es5",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
