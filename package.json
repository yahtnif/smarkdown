{
  "name": "smarkdown",
  "description": "Markdown parser, simplicity and extensibility.",
  "author": "Yahtnif <yahtnif@gmail.com>",
  "version": "0.4.8",
  "main": "dist/smarkdown.js",
  "module": "dist/smarkdown.es.js",
  "jsnext:main": "dist/smarkdown.es.js",
  "browser": "dist/smarkdown.min.js",
  "repository": "yahtnif/smarkdown",
  "homepage": "https://github.com/yahtnif/smarkdown",
  "license": "MIT",
  "keywords": [
    "commonmark",
    "smarkdown",
    "markdown",
    "markup",
    "parser",
    "html",
    "gfm"
  ],
  "scripts": {
    "build": "rollup --c",
    "pass": "rollup --c && size-limit && mocha --inline-diffs",
    "test": "mocha --inline-diffs",
    "version": "rollup --c"
  },
  "lint-staged": {
    "{src|test}/*.{js,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "rollup --c && size-limit && mocha --inline-diffs && lint-staged",
      "pre-push": "rollup --c && size-limit && mocha --inline-diffs"
    }
  },
  "size-limit": [
    {
      "limit": "10 KB",
      "path": "dist/smarkdown.min.js"
    }
  ],
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "fs-extra": "^7.0.0",
    "husky": "^1.1.2",
    "json5": "^2.1.0",
    "klaw-sync": "^6.0.0",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "prettier": "1.14.3",
    "rollup": "^0.66.6",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-filesize": "^5.0.1",
    "rollup-plugin-license": "^0.7.0",
    "rollup-plugin-typescript2": "0.17.1",
    "rollup-plugin-uglify": "^6.0.0",
    "size-limit": "^0.20.1",
    "typescript": "3.1.3"
  }
}
