{
  "name": "smarkdown",
  "description": "Markdown parser, simplicity and extensibility.",
  "author": "Yahtnif <yahtnif@gmail.com>",
  "version": "0.10.1",
  "main": "dist/smarkdown.js",
  "module": "dist/smarkdown.es.js",
  "jsnext:main": "dist/smarkdown.es.js",
  "browser": "dist/smarkdown.min.js",
  "typings": "dist/src/index.d.ts",
  "repository": "yahtnif/smarkdown",
  "homepage": "https://github.com/yahtnif/smarkdown",
  "license": "MIT",
  "keywords": [
    "commonmark",
    "smarkdown",
    "markdown",
    "markup",
    "parser",
    "html",
    "gfm"
  ],
  "scripts": {
    "build": "rollup --c",
    "pass": "jest && rollup --c && size-limit",
    "test": "jest",
    "version": "rollup --c"
  },
  "lint-staged": {
    "{src|__tests__}/**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest",
      "pre-push": "jest && rollup --c && size-limit"
    }
  },
  "size-limit": [
    {
      "limit": "10 KB",
      "path": "dist/smarkdown.min.js"
    }
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "dist/*.js",
    "dist/src/*.d.ts"
  ],
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.10",
    "@types/json5": "^0.0.30",
    "@types/klaw-sync": "^5.0.0",
    "fs-extra": "^7.0.1",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "json5": "^2.1.0",
    "klaw-sync": "^6.0.0",
    "lint-staged": "^8.1.0",
    "prettier": "1.15.3",
    "rollup": "^0.68.2",
    "rollup-plugin-cleanup": "^3.1.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-filesize": "^5.0.1",
    "rollup-plugin-license": "^0.7.0",
    "rollup-plugin-typescript2": "0.18.1",
    "rollup-plugin-uglify": "^6.0.0",
    "size-limit": "^0.21.1",
    "ts-jest": "^23.10.5",
    "typescript": "3.2.2"
  }
}
