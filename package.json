{
  "name": "smarkdown",
  "description": "Markdown parser, simplicity and extensibility.",
  "author": "Yahtnif <yahtnif@gmail.com>",
  "version": "0.14.0",
  "main": "dist/smarkdown.js",
  "module": "dist/smarkdown.es.js",
  "jsnext:main": "dist/smarkdown.es.js",
  "browser": "dist/smarkdown.min.js",
  "typings": "dist/src/index.d.ts",
  "repository": "yahtnif/smarkdown",
  "homepage": "https://github.com/yahtnif/smarkdown",
  "license": "Anti 996",
  "keywords": [
    "commonmark",
    "smarkdown",
    "markdown",
    "markup",
    "parser",
    "html",
    "gfm"
  ],
  "scripts": {
    "build": "rollup --c",
    "pass": "jest && rollup --c && size-limit",
    "test": "jest",
    "version": "rollup --c"
  },
  "lint-staged": {
    "{src|__tests__}/**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest",
      "pre-push": "jest && rollup --c && size-limit"
    }
  },
  "size-limit": [
    {
      "limit": "10 KB",
      "path": "dist/smarkdown.min.js"
    }
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "dist/*.js",
    "dist/src/*.d.ts"
  ],
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/json5": "^0.0.30",
    "@types/klaw-sync": "^6.0.0",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "json5": "^2.1.0",
    "klaw-sync": "^6.0.0",
    "lint-staged": "^9.0.2",
    "prettier": "1.18.2",
    "rollup": "^1.16.6",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-filesize": "^6.1.1",
    "rollup-plugin-license": "^0.9.0",
    "rollup-plugin-typescript2": "0.21.2",
    "rollup-plugin-uglify": "^6.0.2",
    "size-limit": "^0.22.0",
    "ts-jest": "^24.0.2",
    "typescript": "3.5.2"
  }
}
